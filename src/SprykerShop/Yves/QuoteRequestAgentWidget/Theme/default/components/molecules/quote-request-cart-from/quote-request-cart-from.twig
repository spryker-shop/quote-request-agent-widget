{% extends model('component') %}

{% define config = {
    name: 'quote-request-cart-from',
} %}

{% define data = {
    quoteRequestReference: required,
    cartForm: required,
} %}

{% block body %}
    {% if data.quoteRequestReference %}

        {{ form_start(data.cartForm, {'action': path('agent/quote-request/cart/save')}) }}

        <div class="grid grid--justify">
            <div class="col">
                <a class="button button--hollow" href="{{ path('agent/quote-request/cart/clear') }}" title="{{ 'quote_request_page.quote_request.actions.cancel' | trans }}">
                    {{ 'quote_request_page.quote_request.actions.cancel' | trans }}
                </a>
            </div>
            <div class="col">
                <button type="submit" name="save" class="button button--success">
                    {{ 'quote_request_page.quote_request.actions.save' | trans }}
                </button>
            </div>
            <div class="col">
                <button type="submit" name="saveAndBack" class="button button--success">
                    {{ 'quote_request_page.quote_request.actions.save_and_back_to_edit' | trans }}
                </button>
            </div>
        </div>

        {{ form_end(data.cartForm) }}

    {% endif %}
{% endblock %}
